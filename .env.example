# ── Database ─────────────────────────────────────────────────────────────────
# Local (Docker): postgresql://torquehub:torquehub123@localhost:5432/torquehub
# Neon (prod):    postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/torquehub?sslmode=require
POSTGRES_USER=torquehub
POSTGRES_PASSWORD=torquehub123
POSTGRES_DB=torquehub
POSTGRES_PORT=5432
DATABASE_URL=postgresql://torquehub:torquehub123@localhost:5432/torquehub

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ── API ──────────────────────────────────────────────────────────────────────
PORT=3333
HOST=0.0.0.0
NODE_ENV=development

# ── Auth (JWT) ───────────────────────────────────────────────────────────────
# OBRIGATÓRIO em produção — gerar com: openssl rand -base64 32
JWT_SECRET=torquehub-dev-secret-change-in-production

# ── Cloudflare R2 (Storage de uploads) ───────────────────────────────────────
# Criar bucket em: https://dash.cloudflare.com → R2 → Create Bucket
# Criar API token com permissão "Object Read & Write" no bucket
# Se vazio, uploads vão para filesystem local (dev only)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=torquehub-uploads
R2_PUBLIC_URL=

# ── Sentry (Error Tracking) ──────────────────────────────────────────────────
# Criar projeto em: https://sentry.io → Create Project → Node.js
# Se vazio, Sentry não é inicializado
SENTRY_DSN=

# ── SMTP (Email de convite) ───────────────────────────────────────────────────
# Se SMTP_HOST estiver vazio, emails são logados no console (dev mode)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=TorqueHub <noreply@torquehub.com.br>
SMTP_SECURE=false

# ── App URL (usado nos emails de convite) ─────────────────────────────────────
APP_URL=http://localhost:5173

# ── Web URL (CORS) ───────────────────────────────────────────────────────────
WEB_URL=http://localhost:5173
