{
  "name": "torquehub-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint src/",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "11.2.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@torquehub/contracts": "workspace:*",
    "@torquehub/entities": "workspace:*",
    "@torquehub/utils": "workspace:*",
    "dotenv": "^17.3.1",
    "fastify": "5.7.4",
    "pg": "^8.18.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "@types/node": "24.0.4",
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
