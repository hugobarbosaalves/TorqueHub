    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@sentry/node": "^10.39.0",
    "@torquehub/contracts": "workspace:*",
    "@torquehub/design-tokens": "workspace:*",
    "@torquehub/entities": "workspace:*",
    "@torquehub/utils": "workspace:*",
