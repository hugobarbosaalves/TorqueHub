    "fastify": "5.7.4",
    "fastify-plugin": "^5.1.0",
    "nodemailer": "^8.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "pino-pretty": "13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "24.0.4",
    "@types/nodemailer": "^7.0.11",
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
